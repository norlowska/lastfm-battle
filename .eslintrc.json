{
    "plugins": [
        "react"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends": [
        "eslint:recommended", 
        "plugin:react/recommended"
    ],
    "rules": {
        "no-trailing-spaces": "warn",
        "no-unused-vars": "error",
        "semi": [ "error", "always" ],
        "react/prefer-es6-class": "warn"
    }
}